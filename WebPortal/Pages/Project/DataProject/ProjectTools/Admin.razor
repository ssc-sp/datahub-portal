<AuthorizeView Roles="@RoleConstants.DATAHUB_ROLE_ADMIN" Context="Admin_Card">
    <ToolCard
        Title="@Localizer["PROJECT-PAGE.ADMIN-CARD.Title"]"
        Description="@Localizer["Manage the settings and actions for this project. "]">
        <Logo>
            <i class="fas fa-user-crown fa-2x"></i>
        </Logo>
        <ToolActionsList>
            <MudStack Row AlignItems="AlignItems.Center">
                <NavLink href="@($"/edit-project/{ProjectAcronym}")">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Edit Project"]</MudButton>
                </NavLink>
                <NavLink href="@($"/tracker/{ProjectAcronym}")">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Project Tracker"]</MudButton>
                </NavLink>
                <NavLink href="@($"/admin/powerbi/{ProjectAcronym}")">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Power BI Links"]</MudButton>
                </NavLink>
                <NavLink href="@($"/admin/onboardusers/{ProjectAcronym}")">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Onboard Users"]</MudButton>
                </NavLink>
                <NavLink href="@($"/admin/metadata/{ProjectAcronym}")">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Metadata"]</MudButton>
                </NavLink>

            </MudStack>
        </ToolActionsList>
    </ToolCard>
</AuthorizeView>

@code {
    [CascadingParameter(Name = "ProjectAcronym")]
    public string ProjectAcronym { get; set; }
}