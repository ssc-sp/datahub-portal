@if (ProjectAcronym is null)
{
    <ToolCard Loading/>
}
else
{
    <ToolCard
        Title=@Localizer["Form Builder"]
        Description="@Localizer["Design custom data entry forms"]">
        <Logo>
            <AeIcon class="fad fa-file-alt card-icon fa-3x"/>
        </Logo>
        <ToolActionsList>
             <ul>
                <li>
                    <DHLink Variant="h3" DataProject="@ProjectAcronym" LinkType="DatahubLinkType.FormBuilder">
                        <MudButton Variant="Variant.Text" Color="Color.Primary">@Localizer["Open Form Builder"]</MudButton>
                    </DHLink>
                </li>
             </ul>
        </ToolActionsList>
    </ToolCard>
}


@code {
    [CascadingParameter(Name = "ProjectAcronym")]
    public string ProjectAcronym { get; set; }
}