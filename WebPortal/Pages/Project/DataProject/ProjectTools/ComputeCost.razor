@if (ProjectAcronym is null)
{
        <ToolCard Loading/>
}
else
{
        <ToolCard Title=@Localizer["Compute Cost Estimator"]
          Description="@Localizer["Looking for compute costs? Use the Compute Cost Estimator to estimate your compute needs."]">
            <Logo>
            <i class="fad fa-microchip card-icon fa-2x" />
            </Logo>
            <ToolActionsList>
                <DHLink LinkType="DatahubLinkType.ComputeCostEstimator">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Open Compute Cost Estimator"]
                    </ToolActionButton>
                </DHLink>
            </ToolActionsList>
        </ToolCard>
}


@code {
    [CascadingParameter(Name = "ProjectAcronym")]
    public string ProjectAcronym { get; set; }
}