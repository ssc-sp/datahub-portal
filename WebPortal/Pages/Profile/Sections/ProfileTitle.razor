@using MudBlazor.Utilities
<MudStack Row>
    <MudAvatar Elevation="4" Style="@_avatarStyle" Color="Color.Primary">@User.DisplayName[..1]</MudAvatar>
    <MudStack Spacing="0">
        <MudText Typo="Typo.h4">
            <b>@User.DisplayName</b>
        </MudText>
        <MudText Typo="Typo.caption" Class="ml-2">@User.Mail</MudText>
    </MudStack>
</MudStack>

@code {
    
    [Parameter]
    public GraphUser User { get; set; }
    
    private string _avatarStyle;
    
    
    protected override void OnInitialized()
    {
        base.OnInitialized();

        _avatarStyle = new StyleBuilder()
            .AddStyle("height", "120px")
            .AddStyle("width", "120px")
            .AddStyle("margin-top", "-40px")
            .Build();
    }
}