<MudForm>
    @*sector: dropdown*@
    <MudSelect Margin="Margin.Dense" T="string" Label="Client Sector" Variant="Variant.Outlined">
        <MudSelectItem Value="@("Tyrannosaur")" />
        <MudSelectItem Value="@("Triceratops")" />
        <MudSelectItem Value="@("Mike Rex")" />
    </MudSelect>

    @*branch: dropdown*@
    <MudSelect Margin="Margin.Dense" T="string" Label="Client Branch" Variant="Variant.Outlined">
        <MudSelectItem Value="@("Tyrannosaur")" />
        <MudSelectItem Value="@("Triceratops")" />
        <MudSelectItem Value="@("Mike Rex")" />
    </MudSelect>

    @*Initiative Summary Description*@
    <MudTextField @bind-Value="TextValue" Label="Initiative Summary Description (min 20 words)" Variant="Variant.Outlined" HelperText=""></MudTextField>

    @*Initiative Goal*@
    <MudTextField @bind-Value="TextValue" Label="Initiative Goal" Variant="Variant.Outlined" HelperText="Does it tie with departmental plans or initiatives?​"></MudTextField>

    @*Onboarding timeline: dropdown*@
    <MudSelect Margin="Margin.Dense" T="string" Label="Onboarding timeline" Variant="Variant.Outlined">
        <MudSelectItem Value="@("Tyrannosaur")" />
        <MudSelectItem Value="@("Triceratops")" />
        <MudSelectItem Value="@("Mike Rex")" />
    </MudSelect>
</MudForm>

@code {

    public string TextValue { get; set; }


}
