@inherits LayoutComponentBase

@inject IMSGraphService MSGraphService
@inject IApiService ApiService
@inject NavigationManager NavigationManager
@inject UserLocationManagerService UserLocationManagerService

@using Microsoft.Identity.Web
@inject MicrosoftIdentityConsentAndConditionalAccessHandler ConsentHandler

<AuthorizeView>
    <Authorized>        
        <div class="application-wrapper">
            <Sidebar />
            <div class="main-layout">
                <Topbar />
                <div class="ui-control">
                    <div class="page">
                        @Body
                    </div>
                    <RightSidebar />
                    <Modal />

                    <ErrorModal />
                    <div id="blazor-error-ui">
                        <div class="page-modal modal-content-large">
                            <div id="escapearea" class="modal-background"></div>
                            <div class="modal-content">
                                <h4 class="nrcan-typography h4 modal-header">@Localizer["ERROR-PAGE.SomethingWentWrong-Label"]</h4>

                                <div class="modal-body">
                                    <h3>@Localizer["ERROR-PAGE.TechnicalDetails-Label"]</h3>
                                    <p>@Localizer["ERROR-PAGE.ErrorExplanation-Text"]</p>
                                </div>

                                <div class="modal-footer">
                                    <a href="javascript:location.reload(true)" type="button" class="submitbutton finish">@Localizer["ERROR-PAGE.Ok"]</a>
                                </div>
                            </div>
                        </div> 
                   </div>

                    <div id="components-reconnect-modal" class="components-reconnect-hide">
                        <div class="page-modal">
                            <div class="modal-background"></div>
                            <div class="modal-content">
                                <h4 class="nrcan-typography h4 modal-header">@Localizer["ERROR-PAGE.ConnectionToServer-Label"]</h4>

                                <div class="show">
                                    <p>@Localizer["ERROR-PAGE.AttemptingToReConnect-Label"]</p>
                                    <div class="spinner-row"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
                                </div>

                                <div class="failed">
                                    <p>@Localizer["ERROR-PAGE.FailedToConnect-Label"]</p>

                                    <div class="modal-footer">  
                                        <button onClick="window.location.reload();" class="submitbutton finish">@Localizer["ERROR-PAGE.Reload"]</button>
                                    </div>
                                </div>

                                <div class="rejected">
                                    <p>@Localizer["ERROR-PAGE.ConnectionRefused-Label"]</p>

                                    <div class="modal-footer">  
                                        <button onClick="window.location.reload();" class="submitbutton finish">@Localizer["ERROR-PAGE.Reload"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div>@Localizer["ERROR-PAGE.ConnectionLost-Label"]</div>
    </NotAuthorized>
</AuthorizeView>

@code
{

    protected override async Task OnInitializedAsync()
    {
        try {
            await MSGraphService.LoadUsersAsync();
        } catch (Exception ex)
        {
            ConsentHandler.HandleException(ex);
        }
        await ApiService.LoadApplicationData();
    }



}

