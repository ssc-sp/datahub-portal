    private List<HierarchyLevel> GetSectors()
    {
        if (!_sectors.Any())
            _sectors = Context.HierarchyLevels.Where(p => p.Level == 1 && p.IsActive).ToList();

        _sectors.Insert(0, null);
        return _sectors;
    }

    private List<HierarchyLevel> GetBranches()
    {
        if (!_allBranches.Any())
            _allBranches = Context.HierarchyLevels.Where(p => p.Level == 2).ToList();

        _allBranches.Insert(0, null);
        return _allBranches;
    }

    private List<HierarchyLevel> GetDivisions()
    {
        if (!_allDivisions.Any())
            _allDivisions = Context.HierarchyLevels.Where(p => p.Level == 3).ToList();

        _allDivisions.Insert(0, null);
        return _allDivisions;
    }

