@using Datahub.Core.Model.Achievements
@inject DatahubPortalConfiguration _datahubPortalConfiguration

<MudStack Row>
    <MudAvatar Size="Size.Large" Rounded>
        <MudImage Src="@_datahubPortalConfiguration?.Achievements.GetAchievementPortraitUrl(UserAchievement.AchievementId)"></MudImage>
    </MudAvatar>
    <MudStack Spacing="0">
        <MudText Typo="Typo.body1">
            <strong>@Localizer[UserAchievement.Achievement.Name]</strong>
        </MudText>
        <MudText Typo="Typo.body2">@Localizer[UserAchievement.Achievement.Description]</MudText>
    </MudStack>
</MudStack>

@code {
    [Parameter]
    public UserAchievement UserAchievement { get; set; }
}