@using Microsoft.Graph
@using Datahub.Core.Model.Achievements

@inject DatahubPortalConfiguration _datahubPortalConfiguration
@inject NavigationManager _navigationManager

<MudNavMenu Bordered Dense>
    <MudNavLink Icon="@Icons.Material.Filled.Person" Href="@($"/settings/{ProfileSettingsPage.SectionViews.Public}{_query}")">
        @Localizer["Profile"]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Filled.Brush" Href="@($"/settings/{ProfileSettingsPage.SectionViews.Appearance}{_query}")">
        @Localizer["Appearance"]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Filled.Mail" Href="@($"/settings/{ProfileSettingsPage.SectionViews.Notifications}{_query}")">
        @Localizer["Notifications"]
    </MudNavLink>
</MudNavMenu>

@code {
    
    [Parameter]
    public PortalUser ViewedUser { get; set; }
    
    [Parameter]
    public string UserIdBase64 { get; set; }
    
    private string _query => string.IsNullOrEmpty(UserIdBase64) ? string.Empty : $"?u={UserIdBase64}";
}