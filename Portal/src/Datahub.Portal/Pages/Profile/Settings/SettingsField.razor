<MudStack>
        <MudText Typo="Typo.body1">
            <strong>
                @Label
            </strong>
        </MudText>
    <MudText Typo="Typo.body2">
        @Description
    </MudText>
        <MudElement>
            @ChildContent
        </MudElement>
    </MudStack>

@code {
    [Parameter]
    public string Label { get; set; }
    
    [Parameter]
    public string Description { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}