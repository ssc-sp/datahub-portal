@using Datahub.Core.Model.Datahub
@using Datahub.Core.Model.Projects
<div class="project">
    <span class="sector">
        <i class="@($"fad fa-{_projectIcon}")"></i>
        <AeTypography>@Localizer[@Project.SectorName]</AeTypography>
    </span>
    <DHLink class="name" DataProject="@Project.ProjectAcronymCD">@Project.ProjectName</DHLink>
    <DHMarkdown Content="@($"{Project.ProjectDescription}")"></DHMarkdown>
    <DHLink class="project-btn" DataProject="@Project.ProjectAcronymCD">
        <AeButton>@Localizer["View Project"]</AeButton>
    </DHLink>
</div>

@code {

    private string _projectIcon => $"fas fa-{Project?.ProjectIcon ?? Icon.DEFAULTPROJECTICON}";

    [Parameter]
    public DatahubProject Project { get; init; }
}