
<MudNavMenu Bordered Dense>
    <MudNavLink Icon="@Icons.Material.Outlined.Dashboard" Href="@($"{_path}/{SectionViews.Dashboard}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Dashboard)]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Outlined.People" Href="@($"{_path}/{SectionViews.Users}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Users)]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Outlined.BarChart" Href="@($"{_path}/{SectionViews.Reports}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Reports)]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Outlined.Settings" Href="@($"{_path}/{SectionViews.Settings}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Settings)]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Outlined.FolderShared" Href="@($"{_path}/{SectionViews.Metadata}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Metadata)]
    </MudNavLink>
    <MudNavLink Icon="@Icons.Material.Outlined.ShoppingCart" Href="@($"{_path}/{SectionViews.Marketplace}")">
        @Localizer[CultureInfo.CurrentCulture.TextInfo.ToTitleCase(SectionViews.Marketplace)]
    </MudNavLink>

</MudNavMenu>

@code {
    
    [Parameter]
    public string WorkspaceAcronym { get; set; }

    [Parameter]
    public string PathPrefix { get; set; } = "/w";
    
    private string _path => $"{PathPrefix}/{WorkspaceAcronym}";
    
    public struct SectionViews
    {
        public const string Dashboard = "dashboard";
        public const string Users = "users";
        public const string Reports = "reports";
        public const string Settings = "settings";
        public const string Metadata = "metadata";
        public const string Marketplace = "marketplace";
    }
}