@using ApexCharts
@using Color = MudBlazor.Color
<MudStack>
    <DHMainContentTitle Title="@Localizer["Workspace Reports"]" />

    <CascadingValue Value="Locales">
        <MudTabs Elevation="2" ApplyEffectsToContainer="true" PanelClass="pa-6" Style="margin-bottom: 100px" Rounded="true" SliderColor="Color.Primary" Outlined="true">
            <MudTabPanel Text="@Localizer["Costing"]">
                <WorkspaceCostingReport WorkspaceAcronym="@WorkspaceAcronym"/>
            </MudTabPanel>
            <MudTabPanel Text="@Localizer["Storage"]">
                <WorkspaceStorageReport WorkspaceAcronym="@WorkspaceAcronym"/>
            </MudTabPanel>

            @* <MudTabPanel Text="@Localizer["Reports"]"> *@
            @*     <WorkspaceReportsTable WorkspaceAcronym="@WorkspaceAcronym"/> *@
            @* </MudTabPanel> *@
        </MudTabs>
    </CascadingValue>

</MudStack>

