@using Datahub.Core.Model.Achievements
@inject DatahubPortalConfiguration _datahubPortalConfiguration

@if (Achievement is null)
{
    <DHLoadingInitializer Message="@Localizer["Loading Achievement"]"/>
    return;
}

<MudStack Row>
    <MudAvatar Size="Size.Large" Rounded>
        <MudImage Src="@_datahubPortalConfiguration?.Media.GetAchievementPortraitUrl(Achievement.Id)" Alt="@Localizer["Rewarded portrait image"]"></MudImage>
    </MudAvatar>
    <MudStack Spacing="0">
        <MudText Typo="Typo.body1">
            <strong>@Localizer[Achievement.Name]</strong>
        </MudText>
        <MudText Typo="Typo.body2">@Localizer[Achievement.Description]</MudText>
    </MudStack>
</MudStack>

@code {
    [Parameter]
    public Achievement Achievement { get; set; }
}