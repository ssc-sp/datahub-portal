@using Datahub.Application.Configuration
@inject DatahubPortalConfiguration _datahubPortalConfiguration

<ProjectMemberBlock AdminOnly="true" ProjectAcronym="@ProjectAcronym">
    <ToolCard
        Title="@Localizer["PROJECT-PAGE.ADMIN-CARD.Title"]"
        Description="@Localizer["Manage the settings and actions for this project. "]">
        <Logo>
            <i class="fas fa-user-crown fa-2x"></i>
        </Logo>
        <ToolActionsList>
            <MudStack>
            <MudStack Row AlignItems="AlignItems.Center">
                <NavLink href="@($"/edit-project/{ProjectAcronym}")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Edit Project"]
                    </ToolActionButton>
                </NavLink>
                <NavLink href="@($"/tracker/{ProjectAcronym}")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Project Tracker"]
                    </ToolActionButton>
                </NavLink>
                <NavLink href="@($"/admin/powerbi/{ProjectAcronym}")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Power BI Links"]
                    </ToolActionButton>
                </NavLink>
            </MudStack>
            <MudStack Row AlignItems="AlignItems.Center">
                <NavLink href="@($"/admin/onboardusers/{ProjectAcronym}")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Onboard Users"]
                    </ToolActionButton>
                </NavLink>
                <NavLink href="@($"/{_datahubPortalConfiguration.ProjectUrlSegment}/{ProjectAcronym}/metadata")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Metadata"]
                    </ToolActionButton>
                </NavLink>
                <NavLink href="@($"/admin/engagements/{ProjectAcronym}")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Engagements"]
                    </ToolActionButton>
                </NavLink>
                <NavLink href="@($"/{_datahubPortalConfiguration.ProjectUrlSegment}/{ProjectAcronym}/powerbirequest")">
                    <ToolActionButton LinkType="LinkType.Internal">
                        @Localizer["Power BI Workspaces"]
                    </ToolActionButton>
                </NavLink>
            </MudStack>
            </MudStack>
        </ToolActionsList>
    </ToolCard>
</ProjectMemberBlock>

@code {
    [CascadingParameter(Name = "ProjectAcronym")]
    public string ProjectAcronym { get; set; }

    private string password = "123";

}