<MudSwitch Value="ResourceEnabled" ValueChanged="ResourceEnabledChanged" ThumbIconColor="@ThumbColor" ThumbIcon="@ThumbIcon"
            Size="Size.Large"/>

@code {
    [Parameter]
    public bool ResourceEnabled { get; set; }
    [Parameter]
    public EventCallback<bool> ResourceEnabledChanged { get; set; }
    
    private string ThumbIcon => ResourceEnabled ? Icons.Material.Filled.Done : Icons.Material.Filled.Close;
    private Color ThumbColor => ResourceEnabled ? Color.Success : Color.Error;
}