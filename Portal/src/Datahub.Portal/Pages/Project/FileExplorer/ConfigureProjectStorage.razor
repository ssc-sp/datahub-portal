<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="ConnectionData" 
                      Label="Azure storage connection string" 
                      Variant="Variant.Text" 
                      Adornment=@Adornment.End 
                      AdornmentIcon=@Icons.Material.Filled.ContentPaste 
                      OnAdornmentClick="HandlePaste" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="HandleCancel" Class="px-4">@Localizer["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="HandleSave" Disabled="false" Variant="Variant.Filled">
            @Localizer["Save"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string ConnectionData { get; set; } = "";

    private void HandleCancel() => MudDialog.Cancel();

    private void HandleSave()
    {
        MudDialog.Close(DialogResult.Ok(ConnectionData));
    }

    private void HandlePaste()
    {
        // >>
    }
}
