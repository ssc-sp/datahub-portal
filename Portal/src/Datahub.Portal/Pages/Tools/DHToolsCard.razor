            <MudCard>
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icon" Color="Color.Default" Size="Size.Large" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Localizer[Title]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                <MudText>@Localizer[Description]</MudText>
            </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" Href="@Href">
                        @ChildContent
                    </MudButton>
                </MudCardActions>
            </MudCard>

@code {
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
    [Parameter]
    public string Href { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
}
