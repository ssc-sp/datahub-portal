                                ValueChanged="OnTypeChanged" Variant="Variant.Text" Dense="true">
                                <MudSelectItem T="InfrastructureHealthResourceType?" Value="null">@Localizer["All"]</MudSelectItem>
                                @foreach (var status in _workspaceChecks)
                                {
