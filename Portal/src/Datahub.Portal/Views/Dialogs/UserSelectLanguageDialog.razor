<MudDialog Class="pa-6" Style="min-width:600px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon aria-hidden="true" focusable="false" Icon="@Icons.Material.Filled.Language" Class="mr-3 mb-n1"/>
            Language Select / Sélection de la langue
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Class="mb-4">
            <MudText>
                Please select your language of preference
            </MudText>
            <MudText>
                Choisissez votre langue de préférence
            </MudText>
        </MudStack>
        <MudSelect T="string" Label="@Localizer["Language"]" AnchorOrigin="Origin.CenterCenter" @bind-Value="@_language">
            @foreach (var language in _languages)
            {
                <MudSelectItem Value="@language">
                    @language
                </MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@HandleSave" Color="Color.Primary" Variant="Variant.Filled" Disabled="@(string.IsNullOrWhiteSpace(_language))">
            Save / Enregistrer
        </MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    private readonly List<string> _languages = new() { "English", "Français" };
    private string _language;

    private void HandleSave()
    {
        MudDialog.Close(DialogResult.Ok(_language));
    }

}