<AuthorizeView Roles="@GetRoles()">
    <Authorized>
        @ChildContent
    </Authorized>
    <NotAuthorized>
        @NotAuthorizedContent
    </NotAuthorized>
</AuthorizeView>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment NotAuthorizedContent { get; set; }

    [Parameter]
    public AuthLevels AuthLevel { get; set; } = AuthLevels.Unauthorized;

    public enum AuthLevels
    {
        Anonymous,
        Authenticated,
        WorkspaceCollaborator,
        WorkspaceAdmin,
        DatahubAdmin,
        Unauthorized
    }

    private string GetRoles()
    {
        switch (AuthLevel)
        {
            case AuthLevels.Unauthorized:
                return "";
            case AuthLevels.DatahubAdmin:
                return $"{RoleConstants.DATAHUB_ROLE_ADMIN},{RoleConstants.DATAHUB_ROLE_ADMIN_AS_GUEST}";
            default:
                return "";
        }
    }
}