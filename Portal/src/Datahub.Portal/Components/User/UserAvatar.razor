@using Datahub.Core.Model.Achievements
@inject DatahubPortalConfiguration _datahubPortalConfiguration

<MudAvatar Size="@Size">
    <MudImage Src="@AvatarUrl"></MudImage>
</MudAvatar>

@code {
    
    [Parameter]
    public PortalUser ViewedUser { get; set; }
    
    [Parameter]
    public Size Size { get; set; } = Size.Large;
    
    private string AvatarUrl => _datahubPortalConfiguration?.Media.GetAchievementPortraitUrl(ViewedUser?.ProfilePictureUrl);
}