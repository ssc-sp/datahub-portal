@using Datahub.Portal.Pages.Profile
@using Datahub.Core.Model.Achievements
@inject DatahubPortalConfiguration _datahubPortalConfiguration

<MudAvatar Size="Size.Large">
    <MudImage Src="@AvatarUrl"></MudImage>
</MudAvatar>

@code {
    
    [Parameter]
    public PortalUser ViewedUser { get; set; }
    
    private string AvatarUrl => _datahubPortalConfiguration?.Achievements.GetAchievementPortraitUrl(ViewedUser?.ProfilePictureUrl);
}