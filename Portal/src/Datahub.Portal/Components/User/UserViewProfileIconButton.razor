@using Datahub.Core.Extensions

<MudTooltip Delay="600" Text="@Localizer["View profile"]">
    <MudLink Class="align-self-end" Href="@_href" aria-label="view profile">
        <MudIconButton Icon="@Icons.Material.Outlined.Person"/>
        <MudText Typo="@Typo.body2" Class="d-flex justify-center">@Localizer["Profile"]</MudText>
    </MudLink>
</MudTooltip>

@code {

    [Parameter]
    public string ViewedUserGraphId { get; set; }
    
    private string _href => $"/{PageRoutes.AccountPrefix}/?u={ViewedUserGraphId.Base64Encode()}";

}