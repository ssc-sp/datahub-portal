@using Datahub.Core.Extensions

    <DHButton title="@Localizer["View profile"]" Style="text-decoration: underline" Class="align-self-end" Href="@_href" aria-label="view profile" StartIcon="@Icons.Material.Outlined.Person" >
        <MudText>@Localizer["Profile"]</MudText>
    </DHButton>

@code {

    [Parameter]
    public string ViewedUserGraphId { get; set; }
    
    private string _href => $"/{Localizer[PageRoutes.AccountPrefix]}/?u={ViewedUserGraphId.Base64Encode()}";

}