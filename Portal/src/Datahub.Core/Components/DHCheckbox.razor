  <AeCheckbox IsChecked="@IsChecked" IsCheckedChanged="@IsCheckedChanged" 
  HasValueChanged="@HasValueChanged" NullIcon="fad fa-minus-square"
              CheckedIcon="fad fa-check-square" UncheckedIcon="fal fa-square"/>

@code {

    [Parameter]
    public bool IsChecked { get; set; }

    [Parameter]
    public bool HasValue { get; set; } = true;

    [Parameter]
    public EventCallback<bool> IsCheckedChanged { get; set; }

    [Parameter]
    public EventCallback<bool> HasValueChanged { get; set; }

}
