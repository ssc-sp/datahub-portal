<MudButton Variant="Variant.Text" EndIcon="@Icons.Material.Filled.OpenInNew" Color="Color.Primary" Size="Size.Small">
    <DHLink Underline="Underline.None" 
            Typo="Typo.button" 
            DatabricksURL="@DatabricksUrl" 
            LinkType="DatahubLinkType.Databricks"
            DataProject="@ProjectAcronym">
        @Localizer["Open Databricks"]
    </DHLink>
</MudButton>

@code {

    [Parameter]
    public string? ProjectAcronym { get; set; }
    
    [Parameter]
    public string? DatabricksUrl { get; set; }
}