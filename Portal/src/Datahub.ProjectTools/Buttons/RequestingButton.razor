@using Datahub.Core.Enums
@using Datahub.Core.Model.Datahub

@if (IsRunning)
{
    <ToolActionButton LinkType="LinkType.Pending" Disabled>
        @Localizer["Requesting Service Creation"]
    </ToolActionButton>
}
else if (ResourceRequested)
{
    <MudText Typo="Typo.body2">@Localizer["Service Request is being reviewed"]</MudText>
}
else if (Project.Project_Phase == TerraformOutputStatus.PendingApproval)
{
    <ToolActionButton Disabled LinkType="LinkType.Request">
        @Localizer["Pending Approval"]
    </ToolActionButton>
}
else
{
    <ToolActionButton OnClick="@OnRequestService" LinkType="LinkType.Request">
        @Localizer["Request Service Creation"]
    </ToolActionButton>
}

@code {

    [Parameter] public Datahub_Project Project { get; set; }
    [Parameter] public EventCallback OnRequestService { get; set; }
    [Parameter] public bool ResourceRequested { get; set; }
    [Parameter] public bool IsRunning { get; set; }
}