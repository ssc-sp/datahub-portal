<MudLink Typo="Typo.caption" Href="@TemplateToReadmoreMap(TemplateName)">
    @Localizer["Learn more"]
    <MudIcon Icon="fa-solid fa-angles-right"></MudIcon>
</MudLink>

@code {

    [Parameter]
    public string TemplateName { get; set; }

    // TODO: Move this to the readme on the module github page
    private string TemplateToReadmoreMap(string templateName)
    {
        return templateName switch
        {
            "azure-storage-blob" => "https://azure.microsoft.com/en-us/products/storage/blobs/",
            "azure-databricks" => "https://azure.microsoft.com/en-us/products/databricks",
            _ => "https://azure.microsoft.com/en-ca/"
            };
    }
}