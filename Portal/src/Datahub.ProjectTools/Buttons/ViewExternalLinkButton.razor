<MudButton Target="_blank" Href="@ExternalUrl" Variant="@Variant" EndIcon="@Icon" Color="Color.Primary" Size="Size.Small">
    @Text
</MudButton>

@code {

    [Parameter]
    public string? ExternalUrl { get; set; }

    [Parameter]
    public Variant Variant { get; set; } = Variant.Text;

    [Parameter]
    public string Icon { get; set; } = "fa-solid fa-up-right-from-square";

    [Parameter]
    public string? Text { get; set; }

}