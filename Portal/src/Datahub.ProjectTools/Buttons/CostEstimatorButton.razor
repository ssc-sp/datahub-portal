@using Datahub.Shared.Entities

<MudButton Variant="Variant.Text" EndIcon="@Icons.Filled.KeyboardDoubleArrowRight" Color="Color.Primary" Size="Size.Small">
    <DHLink Underline="Underline.None" Typo="Typo.button" LinkType="@TemplateToLinkTypeMap(TemplateName)">
        Run Cost Estimator
    </DHLink>
</MudButton>

@code {

    [Parameter]
    public string? TemplateName { get; set; }

    private DatahubLinkType TemplateToLinkTypeMap(string? templateName)
    {
        return templateName switch
        {
            TerraformTemplate.AzureStorageBlob => DatahubLinkType.StorageCostEstimator,
            TerraformTemplate.AzureDatabricks => DatahubLinkType.ComputeCostEstimator,
            _ => DatahubLinkType.Undefined
            };
    }
}