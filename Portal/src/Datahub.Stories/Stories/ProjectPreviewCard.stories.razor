@using Datahub.Portal.Pages.Project
@using Datahub.Stories.Utils
@using Datahub.Core.Model.Projects
@attribute [Stories("Workspace/Preview Card")]

@inject PlaceholderService _placeholderService

<Stories TComponent="ProjectPreviewCard">

    <Story Name="Default">
        <Template>
            <ProjectPreviewCard Project="@_project"/>
        </Template>
    </Story>

</Stories>


@code {
    private Datahub_Project _project = null!;

    /// <inheritdoc />
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        
        _project = await _placeholderService.GetRandomProjectAsync();
    }

}