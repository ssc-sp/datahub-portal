@using Datahub.Core.Model.Projects
@using Datahub.Portal.Pages.Explore
@attribute [Stories("Workspace/Preview Card")]

<Stories TComponent="@ProjectPreviewCard">

    <Story Name="Default">
        <Template>
            <ProjectPreviewCard Project="@_project"/>
        </Template>
    </Story>

</Stories>


@code {
    private DatahubProject _project = null!;

    /// <inheritdoc />
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        
        _project = await _placeholderService.GetRandomProjectAsync();
    }

}