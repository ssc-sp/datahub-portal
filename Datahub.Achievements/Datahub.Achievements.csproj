<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <Reference Include="Microsoft.Extensions.Logging.Abstractions">
        <HintPath>..\WebPortal\bin\Debug\net6.0\Microsoft.Extensions.Logging.Abstractions.dll</HintPath>
      </Reference>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="MudBlazor" Version="6.0.16" />
      <PackageReference Include="RulesEngine" Version="3.5.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Achievements\**\*.achievement.json" />
      <EmbeddedResource Include="Achievements\**\*.achievement.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>

</Project>
